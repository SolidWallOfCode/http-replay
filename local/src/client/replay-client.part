Import("*")
PartName("replay-client")

env.DependsOn([
    Component("swoc++"),
    Component("openssl"),
    Component("yaml-cpp"),
    Component("http-replay.core"),
    Component("nghttp2"),
])

env.AppendUnique(
    CCFLAGS=['-std=c++17'],
)

env.InstallBin(
    env.SetRPath(  # allow fancy patchelf runpath setting it defined
        env.Program("replay-client", ["replay-client.cc"])
    )
)
